<h1> Editar Receita </h1>
<form action="/receitaEdit" method="POST"  enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{receitas._id}}">
    <div class="form-group">
        <label for="campoNome">Nome</label>
        <input type="text" class="form-control" id="campoNome" name="nome"  value="{{receitas.nome}}">
    </div>
    <div class="form-group">
                <label for="campoIngredientes">Ingredientes</label>
                <input type="text" class="form-control" id="campoIngredientes" name="ingredientes" value="{{receitas.ingredientes}}">
        </div>
        <div class="form-group">
                <label for="campoPreparo">Preparo</label>
                <input type="text" class="form-control" id="campoPreparo" name="preparo" value="{{receitas.preparo}}">
        </div>
        <div class="form-group">
                <label for="campoImagem">Imagem</label>
                <input type="file" class="form-control" id="campoImagem" name="imagem">
        </div>
    <button type="submit" class="btn btn-dark">Editar</button>    
    
</form>