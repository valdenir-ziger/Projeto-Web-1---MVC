<h2>Lista de Usuários</h2>
<div class="table-responsive"></div>
    <table class="table table-sm bg-dark text-white text-start col-6">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Matrícula/Login</th>
                <th scope="col">Senha</th>
                <th scope="col">Nome</th>
                <th scope="col">Tipo</th>
            </tr>
        </thead>
        <tbody>
        {{#each usuarios}}
        <tr>
            <th scope="row">{{login}}</th>
            <td>{{senha}}</td>
            <td>{{nome}}</td>
            <td>{{tipo_descricao}}</td>
            <td><a href="usuarioEdit/{{_id}}"> <button class="btn btn-secondary btn-sm">Editar</button> </a></td>
            {{#if excluido}}
                <td><a href="usuarioDelete/{{_id}}"> <button class="btn btn-outline-danger btn-sm" disabled>Desativado</button> </a></td>
            {{else}}
                <td><a href="usuarioDelete/{{_id}}"> <button class="btn btn-secondary btn-sm">Deletar</button> </a></td>
            {{/if}}
        {{/each}}
        </tbody>
    </table>
    <br>
    <a href="/home" class="list-group-item list-group-item-action list-group-item-secondary col-1">Voltar</a>
</div>
