<h2>Matr√≠cula/Login: {{usuarios.login}}</h2>
<form class="bg-dark text-white" action="/usuarioEdit" method="post">
    <input type="hidden" name="id" value="{{usuarios._id}}">
    <input type="hidden" name="tipo" value="{{usuarios.tipo}}">
    <input type="hidden" name="tipo_descricao" value="{{usuarios.tipo_descricao}}">
    <div class="form-group col-3">
        <label for="campoNome">Nome</label>
        <input type="text" class="form-control" id="campoNome" name="nome"  value="{{usuarios.nome}}">
    </div>
    <div class="form-group col-3">
        <label for="campoSenha">Senha</label>
        <input type="text" class="form-control" id="campoSenha" name="senha" value="{{usuarios.senha}}">
    </div>
    <div class="form-group col-3">
        <label for="campoPergunta">Pergunta Secreta</label>
        <input type="text" class="form-control" id="campoPergunta" name="pergunta_secreta" value="{{usuarios.pergunta_secreta}}">
    </div>
    <div class="form-group col-3">
        <label for="campoResposta">Resposta Secreta</label>
        <input type="text" class="form-control" id="campoResposta" name="resposta_pergunta" value="{{usuarios.resposta_pergunta}}">
    </div>
    <div class="input-group mb-3 col-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="campoTipo">Tipo</label>
        </div>
        <select class="custom-select" id="campoTipo" name="tipo">
            <option value="{{usuarios.tipo}}" selected>{{usuarios.tipo_descricao}}</option>
            <option value="2">Candidato</option>
            <option value="1">Ouvinte/Votante</option>
            <option value="0">Administrador</option>
        </select>
    </div>
    <button type="submit" class="btn btn-secondary">Salvar</button>
    <br><br>
</form>